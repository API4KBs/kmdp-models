<project xmlns="http://maven.apache.org/POM/4.0.0"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
  <modelVersion>4.0.0</modelVersion>

  <parent>
    <groupId>edu.mayo.kmdp</groupId>
    <artifactId>kmdp-uml-model</artifactId>
    <version>1.0-SNAPSHOT</version>
  </parent>

  <name>KMDP :: Lang :: API4KP :: Knowledge Resource Surrogate Model</name>

  <artifactId>kmdp-model-metadata</artifactId>

  <properties>
    <uml-model>metadata.uml</uml-model>
    <xsd-name>metadata/surrogate/surrogate.xsd</xsd-name>
  </properties>

  <dependencies>

    <dependency>
      <groupId>edu.mayo.kmdp</groupId>
      <artifactId>kmdp-lang-utils</artifactId>
    </dependency>

    <dependency>
      <groupId>edu.mayo.kmdp</groupId>
      <artifactId>kmdp-datatype</artifactId>
    </dependency>
    <dependency>
      <groupId>edu.mayo.kmdp</groupId>
      <artifactId>kmdp-terminology-content</artifactId>
    </dependency>

    <dependency>
      <groupId>edu.mayo.kmdp</groupId>
      <artifactId>kmdp-test-utils</artifactId>
      <scope>test</scope>
    </dependency>

    <dependency>
      <groupId>com.fasterxml.jackson.core</groupId>
      <artifactId>jackson-databind</artifactId>
      <scope>test</scope>
    </dependency>
    <dependency>
      <groupId>com.fasterxml.jackson.core</groupId>
      <artifactId>jackson-annotations</artifactId>
    </dependency>
    <dependency>
      <groupId>de.escalon.hypermedia</groupId>
      <artifactId>hydra-spring</artifactId>
      <scope>test</scope>
    </dependency>


  </dependencies>


  <build>

    <plugins>

      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-dependency-plugin</artifactId>
        <version>3.0.2</version>
        <executions>
          <execution>
            <id>include-xsds</id>
            <phase>initialize</phase>
            <goals>
              <goal>unpack</goal>
            </goals>
            <configuration>
              <artifactItems>
                <artifactItem>
                  <groupId>edu.mayo.kmdp</groupId>
                  <artifactId>kmdp-terminology-content</artifactId>
                  <version>1.0-SNAPSHOT</version>

                  <type>jar</type>
                  <overWrite>true</overWrite>
                  <outputDirectory>${project.build.outputDirectory}</outputDirectory>
                  <includes>**/*.xsd,**/*.xjb,**/*catalog*.xml</includes>
                </artifactItem>
              </artifactItems>
            </configuration>
          </execution>
        </executions>
      </plugin>


      <plugin>
        <groupId>org.codehaus.mojo</groupId>
        <artifactId>xml-maven-plugin</artifactId>
        <executions>
          <execution>
            <id>generate-yaml</id>
            <configuration>
              <catalogs>
                <catalog>
                  ${project.build.outputDirectory}${file.separator}xsd${file.separator}terms-catalog.xml
                </catalog>
              </catalogs>
            </configuration>
          </execution>
        </executions>
      </plugin>


      <plugin>
        <groupId>org.jvnet.jaxb2.maven2</groupId>
        <artifactId>maven-jaxb2-plugin</artifactId>
        <executions>
          <execution>
            <id>gen-uml</id>
            <configuration>
              <catalog>
                ${project.build.outputDirectory}${file.separator}xsd${file.separator}terms-catalog.xml
              </catalog>

              <schemas>
                <schema>
                  <fileset>
                    <directory>${project.build.outputDirectory}/xsd</directory>
                    <includes>
                      <include>**/*.xsd</include>
                    </includes>
                    <excludes>
                      <exclude>**/*.openapi.xsd</exclude>
                    </excludes>
                  </fileset>
                </schema>
              </schemas>

            </configuration>
          </execution>

          <execution>
            <id>gen-ext</id>
            <phase>process-resources</phase>
            <goals>
              <goal>generate</goal>
            </goals>

            <configuration>
              <catalog>
                ${project.build.outputDirectory}${file.separator}xsd${file.separator}terms-catalog.xml
              </catalog>

              <schemas>
                <schema>
                  <fileset>
                    <directory>${project.build.outputDirectory}${file.separator}xsd</directory>
                    <includes>
                      <include>**/*.xsd</include>
                    </includes>
                    <excludes>
                      <exclude>**/identifiers.openapi.xsd</exclude>
                    </excludes>
                  </fileset>
                </schema>
              </schemas>

            </configuration>
          </execution>

        </executions>
        <dependencies>
          <dependency>
            <groupId>edu.mayo.kmdp</groupId>
            <artifactId>kmdp-terminology-content</artifactId>
            <version>1.0-SNAPSHOT</version>
          </dependency>
        </dependencies>
      </plugin>

      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-resources-plugin</artifactId>
      </plugin>

    </plugins>
  </build>

</project>
